{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "make",
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "build debug",
      "type": "shell",
      "command": "make -C minilibx-linux && make -C ft_printf && make -C Libft && make -C GetNextLine && make CFLAGS='-g -O0'",
      "group": "build",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "make clean",
      "problemMatcher": []
    }
  ]
}
